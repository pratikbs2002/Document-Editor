        <activity
            android:name=".tools.pdf_to_jpg"
            android:exported="false" />
        <activity
            android:name=".tools.ppt_to_pdf"
            android:exported="false" />
        <activity
            android:name=".tools.word_to_pdf"
            android:exported="false" />
        <activity
            android:name=".tools.jpg_to_pdf"
            android:exported="false" />
