            android:name=".tools.watermark"
            android:exported="false" />
        <activity
            android:name=".tools.signature"
            android:exported="false" />
        <activity
            android:name=".tools.split_pdf"
            android:exported="false" />
        <activity
            android:name=".tools.merge_pdf"
            android:exported="false" />
        <activity
            android:name=".fragment.Files.folderList"
            android:exported="false" />
        <activity
            android:name=".favourite"
            android:exported="false" />
        <activity
            android:name=".setting"
            android:exported="false" />
        <activity
            android:name=".spash_screen"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
