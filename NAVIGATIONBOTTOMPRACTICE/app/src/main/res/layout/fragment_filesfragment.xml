<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Files.filesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backcard"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        android:weightSum="8"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/btnInternalStorage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:text="@string/internal_storage"
            android:textAlignment="textStart"
            android:backgroundTint="@color/folders"
            android:textColor="#391F68"
            android:textSize="20sp"
            android:focusable="true"/>

        <Button
            android:id="@+id/btnDownloads"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:text="@string/downloads"
            android:textAlignment="textStart"
            android:backgroundTint="@color/folders"
            android:textColor="#391F68"
            android:textSize="20sp"
            android:focusable="true"/>

        <Button
            android:id="@+id/btnAppFolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:letterSpacing="0.01"
            android:text="@string/document_editor"
            android:textAlignment="textStart"
            android:backgroundTint="@color/folders"
            android:textColor="#391F68"
            android:textSize="20sp"
            android:focusable="true"/>

    </LinearLayout>


</FrameLayout>